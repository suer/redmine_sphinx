<h2><%= l(:label_sphinx_documents) %></h2>

<style type="text/css">
td {
  text-align: center;
}
</style>

<table class="list">
  <thead>
    <tr>
      <th><%= l(:field_identifier) %></th>
      <th><%= l(:link) %></th>
      <th><%= l(:last_build_time) %></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= document.repository.identifier %></td>
      <td><%= link_to l(:show_document), :action => :show, :identifier => document.repository.identifier %></td>
      <td><%= document.built_at ? format_time(document.built_at) : '' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

